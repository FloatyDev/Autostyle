{
    "name": "autostyle/backend",
    "description": "PHP Backend for Autostyle",
    "type": "project",
    "require": {
        "php": "^8.2",
        "bramus/router": "^1.6",
        "vlucas/phpdotenv": "^5.6",
        "firebase/php-jwt": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
